<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Screen shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="8dp" />
            <padding android:bottom="2dp" android:right="2dp" />
        </shape>
    </item>
    <!-- Screen frame -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#1A237E"
                android:startColor="#283593"
                android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#3949AB" />
        </shape>
    </item>
    <!-- Screen glass -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#000000"
                android:endColor="#1A000000"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Screen highlight -->
    <item android:left="3dp" android:right="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list> 