<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size
                android:width="180dp"
                android:height="180dp" />
            <padding android:bottom="4dp" android:right="4dp" />
        </shape>
    </item>
    <!-- Button rim -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="315"
                android:endColor="#6A1B9A"
                android:centerColor="#8E24AA"
                android:startColor="#AB47BC"
                android:type="linear" />
            <size
                android:width="180dp"
                android:height="180dp" />
            <stroke
                android:width="2dp"
                android:color="#4A148C" />
        </shape>
    </item>
    <!-- Button face -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="oval">
            <gradient
                android:angle="315"
                android:endColor="#7B1FA2"
                android:centerColor="#9C27B0"
                android:startColor="#BA68C8"
                android:type="linear" />
            <size
                android:width="172dp"
                android:height="172dp" />
        </shape>
    </item>
    <!-- Button highlight -->
    <item android:left="8dp" android:top="8dp">
        <shape android:shape="oval">
            <gradient
                android:angle="315"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <size
                android:width="164dp"
                android:height="164dp" />
        </shape>
    </item>
</layer-list> 