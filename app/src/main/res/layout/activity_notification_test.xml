<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnTestMissedTasbeeh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Missed Tasbeeh Notification"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnTestPrayerReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Prayer Reminder (10s delay)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnScheduleNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Daily Notifications"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCancelNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel All Notifications"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnUpdateTasbeehTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Tasbeeh Timestamp"
        android:layout_marginBottom="16dp" />

</LinearLayout> 